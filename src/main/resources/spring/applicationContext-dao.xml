				<value>com/clps/jPet/domain/Orders.hbm.xml</value>
				<value>com/clps/jPet/domain/Orderstatus.hbm.xml</value>
				<value>com/clps/jPet/domain/Product.hbm.xml</value>
				<value>com/clps/jPet/domain/Profile.hbm.xml</value>
